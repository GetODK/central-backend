  "version": "0.2.0",
  "configurations": [
    {
      "args": [
        "--recursive",
        "test",
        "--exit",
        "--timeout",
        "0"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "args": [
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Debug App",
      "program": "${workspaceFolder}/lib/bin/run-server.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "env": {
        "SENTRY_ENVIRONMENT": "Local"
      }
    }
  ]
}